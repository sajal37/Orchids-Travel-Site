# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://travelhub:changeme@localhost:5432/travelhub
POSTGRES_USER=travelhub
POSTGRES_PASSWORD=changeme
POSTGRES_DB=travelhub

# Redis Cache
REDIS_URL=redis://localhost:6379

# Authentication (if using NextAuth or similar)
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Payment Integration (Stripe example)
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# AI/ML Services (OpenAI, Anthropic, etc.)
OPENAI_API_KEY=sk-xxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Monitoring & Observability
DATADOG_API_KEY=xxxxx
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Email Service (SendGrid, AWS SES, etc.)
SENDGRID_API_KEY=SG.xxxxx
EMAIL_FROM=noreply@travelhub.com

# SMS Service (Twilio example)
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1234567890

# Cloud Storage (AWS S3, Cloudinary, etc.)
AWS_ACCESS_KEY_ID=xxxxx
AWS_SECRET_ACCESS_KEY=xxxxx
AWS_REGION=us-east-1
AWS_S3_BUCKET=travelhub-assets

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_RECOMMENDATIONS=true
ENABLE_NL_SEARCH=true

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# CI/CD
DOCKER_USERNAME=your-dockerhub-username
DOCKER_PASSWORD=your-dockerhub-password
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
SLACK_WEBHOOK=https://hooks.slack.com/services/xxxxx
SNYK_TOKEN=xxxxx

# Stripe keys - Get yours from https://stripe.com/docs/keys
STRIPE_TEST_KEY=your_stripe_test_key_here
